{% extends 'frontbase.html.twig' %}

{% block title %}Yorum index{% endblock %}

{% block body %}
    <h1>Yorum index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>mesaj</th>
                <th>Productid</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for yorum in yorum %}
            <tr>
                <td>{{ yorum.id }}</td>
                <td>{{ yorum.title }}</td>
                <td>{{ yorum.yorum }}</td>
                <td>{{ yorum.productid }}</td>
                <td>
                    <a href="{{ path('yorum_show', {'id': yorum.id}) }}">show</a>
                    <a href="{{ path('yorum_edit', {'id': yorum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('yorum_new') }}">Create new</a>
{% endblock %}
