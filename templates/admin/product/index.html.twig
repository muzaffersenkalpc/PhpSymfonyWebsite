{% extends 'adminbase.html.twig' %}


{% block title %}Product index{% endblock %}

{% block content %}


    <div class="inner" style="min-height:1200px;">
            <div class="col-lg-15">
                <h1>Ürün Listesi</h1>

                <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Keywords</th>
                <th>Description</th>
                <th>Type</th>
                <th>Seller_id</th>
                <th>Model</th>
                <th>Amount</th>
                <th>Pprice</th>
                <th>Sprice</th>
                <th>Image</th>
                <th>Gallery</th>
                <th>Firma_id</th>
                <th>Category_id</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.keywords }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.type }}</td>
                <td>{{ product.sellerId }}</td>
                <td>{{ product.Model }}</td>
                <td>{{ product.amount }}</td>
                <td>{{ product.pprice }}</td>
                <td>{{ product.sprice }}</td>
                <td>

                    <a  href="javascript:openWin('{{ path('admin_product_iedit', {'id' : product.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menubar=no,scrollBars=no,resizable=no,width=600,height=500');">

                    {% if product.image == NULL %}

                        <h1 class=" icon-folder-open"> </h1>

                    {% else %}
                        <img src="{{ asset('images')}}/phpsiteresimleri/{{ product.image }} " height="50">

                        {% endif %}


                </td>
                <td>
                    <a  href="javascript:openWin('{{ path('admin_image_new', {'pid' : product.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menubar=no,scrollBars=no,resizable=no,width=1000,height=800');">

                    <h1 class=" icon-folder-open"> </h1>
                    {{ product.gallery }}

                </td>
                <td>{{ product.firmaId }}</td>
                <td>{{ product.categoryId }}</td>
                <td>{{ product.status }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('admin_product_show', {'id': product.id}) }}"><i class="icon-eye-open"></i>Bilgiler</a>
                    <a class="btn btn-primary" href="{{ path('admin_product_edit', {'id': product.id}) }}"><i class="icon-pencil icon-white"></i>Düzenle</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Kayıtlı ürün yoktur</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

                <a href="{{ path('admin_product_new') }}" class="btn btn-success"><i class="icon-plus"></i>  Yeni ürün ekle</a>


{% endblock %}
