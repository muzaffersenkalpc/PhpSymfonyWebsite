
{% block content %}
    <!--PAGE CONTENT -->
    <section class="content">



        <div class="inner" style="min-height:1200px;">
            <div class="row">
                <div class="col-lg-12">

                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="icon-th-large"></i></div>
                                <h5>Kategori formu</h5>
                                <div class="toolbar">
                                    <ul class="nav">
                                        <li>
                                            <div class="btn-group">
                                                <a class="accordion-toggle btn btn-xs minimize-box" data-toggle="collapse" href="#collapseOne">
                                                    <i class="icon-chevron-up"></i>
                                                </a>

                                            </div>
                                        </li>
                                    </ul>
                                </div>

                            </header>
                            <div id="collapseOne" class="accordion-body collapse in body">


                                <form class="form-horizontal"  method="post">
                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Üst Kategori</label>

                                        <div class="col-lg-4">
                                            <select class="form-control " name="product[category_id]"  ">
                                            <option value="{{ product.categoryid }}">{{ catname[0].title }}</option>
                                            <option value="0">Ana Kategori</option>
                                            {% for cat in catlist %}
                                                <option value="{{ cat.id}}">{{ cat.title }}</option>
                                            {% endfor %}


                                            </select>
                                        </div>
                                    </div>




                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Kategori Adı</label>

                                        <div class="col-lg-4">
                                            <input type="text"  name="product[title]" value="{{ product.title }}"class="form-control">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Anahtar Kelimeler</label>

                                        <div class="col-lg-4">
                                            <input type="text"  name="product[keywords]" value="{{ product.keywords }}"class="form-control">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Açıklama</label>

                                        <div class="col-lg-4">
                                            <input type="text"  name="product[description]" value="{{ product.description }}"class="form-control">
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Model yılı</label>

                                        <div class="col-lg-4">
                                            <input type="text"  name="product[Model]" value="{{ product.Model }}"class="form-control">
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Alış fiyatı</label>

                                        <div class="col-lg-4">
                                            <input type="text"  name="product[pprice]" value="{{ product.pprice }}"class="form-control">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Satış fiyatı</label>

                                        <div class="col-lg-4">
                                            <input type="text"  name="product[sprice]" value="{{ product.sprice }}"class="form-control">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Aktif durumu</label>

                                        <div class="col-lg-4">
                                            <select class="form-control " name="product[status]"  ">
                                            <option >{{ product.status }}</option>
                                            <option >True</option>
                                            <option >False</option>

                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Adet sayısı</label>

                                        <div class="col-lg-4">
                                            <input type="text"  name="product[amount]" value="{{ product.amount }}"class="form-control">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Detay</label>

                                        <div class="col-lg-4">
                                            <textarea id="editor" name="product[detail]" rows="10" cols="100">{{ product.detail }}</textarea>

                                        </div>
                                    </div>








                                    <div class="box-footer" style="text-align:center;">
                                        <a href="{{ path('admin_product_index') }}" class="btn btn-warning btn-lg" ><i class="icon-remove icon-white"></i> Iptal</a>
                                        <button type="submit"  class="btn btn-primary btn-lg "><i class="icon-check"></i> Kaydet</button>


                                    </div>



                                </form>
                                {{ include('admin/product/_delete_form.html.twig') }}

                            </div>

                        </div>
                    </div>





                </div>


            </div>

        </div>

    </section>
    <script>
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .catch( error => {
            console.error( error );
        } );
    </script>
    <!--END PAGE CONTENT -->
{% endblock %}
