{% extends 'adminbase.html.twig' %}

{% block title %}Users index{% endblock %}

{% block content %}
<!--PAGE CONTENT -->


    <div class="inner" style="min-height:1200px;">
        <div class="row">
            <div class="col-lg-12">


            <h1 >Üye listesi</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Roles</th>

                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{% for item in user.roles %}

                        {{ item }}
                    {% endfor %}</td>

                <td>{{ user.status }}</td>
                <td>
                    <a  class="btn btn-warning" href="{{ path('admin_users_show',  {'id': user.id}) }}"><i class="icon-eye-open"></i> Bilgiler</a>
                    <a  class="btn btn-primary" , href="{{ path('admin_users_edit', {'id': user.id}) }} "><i class="icon-pencil icon-white"></i> Düzenle</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Kayıtlı kimse yoktur.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_users_new') }}" class="btn btn-success">Yeni kayıt</a>
            </div>
        </div>






    </div>





    <!--END PAGE CONTENT -->

{% endblock %}
