
{% block content %}
    <!--PAGE CONTENT -->
    <section class="content">



        <div class="inner" style="min-height:1200px;">
            <div class="row">
                <div class="col-lg-12">

                    <div class="col-lg-12">
                        <div class="box">
                            <header>
                                <div class="icons"><i class="icon-th-large"></i></div>
                                <h5>Kategori formu</h5>
                                <div class="toolbar">
                                    <ul class="nav">
                                        <li>
                                            <div class="btn-group">
                                                <a class="accordion-toggle btn btn-xs minimize-box" data-toggle="collapse" href="#collapseOne">
                                                    <i class="icon-chevron-up"></i>
                                                </a>

                                            </div>
                                        </li>
                                    </ul>
                                </div>

                            </header>
                            <div id="collapseOne" class="accordion-body collapse in body">


                                <form class="form-horizontal"  method="post">
                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Üst Kategori</label>

                                        <div class="col-lg-4">
                                            <select class="form-control " name="category[parentid]"  id="users_status" ">
                                            <option >{{ category.parentid }}</option>
                                            <option value="0">Ana Kategori</option>
                                            {% for cat in catlist %}
                                                <option value="{{ cat.id }}">{{ cat.title }}</option>
                                            {% endfor %}


                                            </select>
                                        </div>
                                    </div>




                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Kategori Adı</label>

                                        <div class="col-lg-4">
                                            <input type="text" id="category_email" name="category[title]" value="{{ category.title }}"class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Anahtar Kelimeler</label>

                                        <div class="col-lg-4">
                                            <input type="text" id="category_password" name="category[keywords]" value="{{ category.keywords }}"class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Açıklama</label>

                                        <div class="col-lg-4">
                                            <input type="text" id="category_password" name="category[description]" value="{{ category.description }}"class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-4">Aktif durumu</label>

                                        <div class="col-lg-4">
                                            <select class="form-control " name="category[status]"  id="category_status" ">
                                            <option >{{ category.status }}</option>
                                            <option >True</option>
                                            <option >False</option>

                                            </select>
                                        </div>
                                    </div>







                                    <div class="box-footer" style="text-align:center;">
                                        <a href="{{ path('admin_category_index') }}" class="btn btn-warning btn-lg" ><i class="icon-remove icon-white"></i> Iptal</a>
                                        <button type="submit"  class="btn btn-primary btn-lg "><i class="icon-check"></i> Kaydet</button>


                                    </div>



                                </form>
                                {{ include('admin/category/_delete_form.html.twig') }}

                            </div>

                        </div>
                    </div>





                </div>


            </div>

        </div>

    </section>

    <!--END PAGE CONTENT -->
{% endblock %}
