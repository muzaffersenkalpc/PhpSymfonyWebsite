{% extends 'adminbase.html.twig' %}

{% block title %}Category index{% endblock %}

{% block content %}


    <div class="inner" style="min-height:1200px;">

            <div class="col-lg-15">

    <h1>Kategori Listesi</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Parentid</th>
                <th>Title</th>
                <th>Keywords</th>
                <th>Description</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.parentid }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.keywords }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.status }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('admin_category_show', {'id': category.id}) }}"><i class="icon-eye-open"></i>Bilgiler</a>
                    <a class="btn btn-primary" href="{{ path('admin_category_edit', {'id': category.id}) }}"><i class="icon-pencil icon-white"></i>Düzenle</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Kayıtlı ürün yoktur</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                <a href="{{ path('admin_category_new') }}" class="btn btn-success"><i class="icon-plus"></i>  Yeni kategori ekle</a>
            </div>
        </div>










</div>

{% endblock %}
