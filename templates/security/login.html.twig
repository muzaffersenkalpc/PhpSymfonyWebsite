{% extends 'frontbase.html.twig' %}

{% block title %} Giriş ekranı {% endblock %}
{% block keywords %}{{ data[0].keywords }} {% endblock %}
{% block description %}{{ data[0].description }}{% endblock %}

{% block sidebar %}

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {{ include ('home/_userssidebar.html.twig') }}
    {% endif %}

{% endblock %}

{% block body %}

    <div class="container">
        {{ include('user/messages.html.twig') }}


        <div class="col-sm-5">

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="view-product">


                        <div class="container">



                            <div class="col-sm-5">
                                {{ include('user/messages.html.twig') }}
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ app.user.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>{{ app.user.email }}</td>
                                    </tr>
                                    <tr>
                                        <th>Roles</th>
                                        <td>{{ app.user.roles|join}}</td>
                                    </tr>
                                    <tr>
                                        <th>Name</th>
                                        <td>{{ app.user.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Adres</th>
                                        <td>{{ app.user.address }}</td>
                                    </tr>

                                    <tr>
                                        <th>Şehir</th>
                                        <td>{{ app.user.city }}</td>
                                    </tr>
                                    <tr>
                                        <th>Telefon</th>
                                        <td>{{ app.user.number }}</td>
                                    </tr>

                                    </tbody>
                                </table>
                            </div>

                        </div>
                        </div></div></div>




                        </div>

                        </div>
                        </div></div></div>







                    {% else %}


                    <form method="post">

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="col-sm-10 col-sm-offset-10">

                            <h1 class="h3 mb-3 font-weight-normal">Üye girişi</h1><br>
                            <label for="inputEmail" class="sr-only">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                            <br>
                            <label for="inputPassword" class="sr-only">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html

                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                            #}

                            <button class="btn btn-lg btn-primary" type="submit">
                                Giriş yap
                            </button>

                                <a   href="{{ path('new_user') }}" class="btn btn-lg btn-primary" ><i class="fa fa-use"></i> Üye Ol</a>

                    </form>{% endif %}

                </div>

            </div>
        </div></div></div>




{% endblock %}

